<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="@dimen/activity_general_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:text="@string/settings_sound_textView"
        android:textColor="@color/blue_grey"
        android:textSize="@dimen/text_general_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_grey"
        android:orientation="horizontal"
        android:padding="@dimen/activity_general_padding">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="@string/settings_soundEffects"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_settings_size" />

        <CheckBox
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_grey"
        android:orientation="horizontal"
        android:padding="@dimen/activity_general_padding">


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="@string/settings_music"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_settings_size" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_marginTop="@dimen/text_settings_size"
        android:text="@string/settings_pushNotifications"
        android:textColor="@color/blue_grey"
        android:textSize="@dimen/text_general_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_grey"
        android:orientation="horizontal"
        android:padding="@dimen/activity_general_padding">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="@string/settings_push_activated"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_settings_size" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>