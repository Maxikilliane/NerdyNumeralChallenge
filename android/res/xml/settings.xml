<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/settings_sound_textView">
        <CheckBoxPreference
            android:key="pref_sound_effects"
            android:title="@string/settings_soundEffects"
            android:defaultValue="true"/>
        <CheckBoxPreference
            android:key="pref_music"
            android:title="@string/settings_music"
            android:defaultValue="true"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/settings_pushNotifications">
        <CheckBoxPreference
            android:key="pref_notifications"
            android:title="@string/settings_push_activated"
            android:defaultValue="false"/>
    </PreferenceCategory>
</PreferenceScreen>